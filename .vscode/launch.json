{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pytest Custom",

      "request": "launch",
      "program": "${workspaceFolder}/tests.py",
      "console": "integratedTerminal",
      "args": [
        "-v",
        "-s",
        "-x",
        "--pdb",
        "--pdbcls=IPython.terminal.debugger:TerminalPdb",
        "--color=yes",
        "--disable-warnings"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
